<div class="bg-white shadow-md rounded-lg p-6 m-4 max-w-sm">
  <h2 class="text-lg font-semibold text-gray-800">Model: <%= cab.model %></h2>
  <p class="text-gray-600">
    <span class = "font-bold">Category: </span>
    <span class="font-medium"><%= cab.category %></span></p>
  <p class="text-gray-600">
    <span class = "font-bold">Vehicle No.: </span>
    <span class="font-medium"><%= cab.vehicle_number %></span></p>
  <p class="text-gray-600">
    <span class = "font-bold">Current Location: </span>
    <span class="font-medium"><%= cab.location.name %></span></p>
  <p class="text-gray-600">
    <span class = "font-bold">Status: </span>
    <% if cab.is_available? %>
      <span class="font-medium text-green-600">available</span></p>
    <% else %>
      <span class="font-medium text-red-600">unavailable</span></p>
    <% end %>
  <p class="text-gray-600">
    <span class = "font-bold">Total Trips: </span>
    <span class="font-medium"><%= cab.rides.count %></span></p>
  <p class="text-gray-600">
    <span class = "font-bold">Total Earned: </span>
    <span class="font-medium">â‚¹ <%= cab.rides.sum(:total_fare) %></span></p>
  <div class="flex justify-between items-center mt-4">
    <%= link_to "Edit Cab", edit_cab_path(cab), class: "text-blue-500 hover:underline" %>
    <%= link_to "Delete Cab", cab_path(cab), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-red-500 hover:underline pl-4" %>
  </div>
</div>
