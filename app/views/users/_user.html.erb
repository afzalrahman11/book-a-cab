<div class="bg-white shadow-md rounded-lg p-6 m-4 max-w-sm">
  <h2 class="text-lg font-semibold text-gray-800">Name: <%= user.name %></h2>
  <p class="text-gray-600">Email: <%= user.email %></p>
  <p class="text-gray-600">Phone: <%= user.phone %></p>
  
  <div class="mt-4 flex justify-between">
    <%= link_to "Edit", edit_user_registration_path, class: "text-blue-500 hover:underline" %>
    <% if current_user.admin? %>
      <%= link_to "Delete User", user_path(user), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-red-500 hover:underline" %>
    <% end %>
  </div>
</div>
