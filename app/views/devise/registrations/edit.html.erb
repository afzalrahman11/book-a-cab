<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
  <div class="flex flex-col items-center justify-center">
    <%= link_to "Book A Cab", root_path, class: "text-3xl font-medium py-8" %>
    <div class="border border-black rounded-md flex flex-col items-center py-4 px-6">
      <h2 class="text-2xl font-medium mb-4">Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="flex flex-col my-4">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'rounded-md border border-black mt-1 focus:ring-black'%>
        </div>

        <div class="flex flex-col my-4 min-w-96">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'rounded-md border border-black mt-1 focus:ring-black' %>
        </div>

        <div class="flex flex-col my-4">
          <%= f.label :phone %>
          <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", class:'rounded-md border border-black mt-1 focus:ring-black' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="flex flex-col my-4">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class:'rounded-md border border-black mt-1 focus:ring-black' %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="flex flex-col my-4">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'rounded-md border border-black mt-1 focus:ring-black' %>
        </div>

        <div class="flex flex-col my-4">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class:'rounded-md border border-black mt-1 focus:ring-black' %>
        </div>

        <div class="actions flex flex-col items-center mt-8">
          <%= f.submit "Update", class:'min-w-max cursor-pointer bg-black text-white rounded-md py-2 px-6 hover:bg-gray-700' %>
        </div>
      <% end %>

      <div>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'my-4' %></div>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
